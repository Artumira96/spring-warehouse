<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet id="1640688769-1" author="averageflow">
        <createTable tableName="users">
            <column name="uid" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="users_pkey"/>
            </column>
            <column name="item_name" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="roles">
            <column name="uid" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="roles_pkey"/>
            </column>
            <column name="item_name" type="VARCHAR">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="user_roles">
            <column name="uid" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_roles_pkey"/>
            </column>
            <column name="user_uid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="role_uid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet author="averageflow" id="1640688769-2">
        <addForeignKeyConstraint baseColumnNames="user_uid" baseTableName="user_roles"
                                 constraintName="fk_user_user_roles" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="uid" referencedTableName="users" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="role_uid" baseTableName="user_roles"
                                 constraintName="fk_role_user_roles" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="uid" referencedTableName="roles" validate="true"/>
    </changeSet>

</databaseChangeLog>